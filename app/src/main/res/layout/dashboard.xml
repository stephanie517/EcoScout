<!-- activity_dashboard.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Button for Litter Reporting & Image Recognition -->
    <Button
        android:id="@+id/litterReportingAndImageRecognitionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Litter Reporting and Image Recognition"
        android:layout_marginBottom="16dp" />

    <!-- Button for Cleanup Event Coordination -->
    <Button
        android:id="@+id/cleanupEventCoordinationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cleanup Event Coordination"
        android:layout_marginBottom="16dp" />

    <!-- Button for Alert -->
    <Button
        android:id="@+id/alertButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert"
        android:layout_marginBottom="16dp" />

    <!-- Button for Proper Disposal Guidance -->
    <Button
        android:id="@+id/properDisposalGuidanceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proper Disposal Guidance"
        android:layout_marginBottom="16dp" />

    <!-- Button for Rewards & Gamification -->
    <Button
        android:id="@+id/rewardsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rewards and Gamification"
        android:layout_marginBottom="16dp" />

    <!-- Button for Sustainability Education -->
    <Button
        android:id="@+id/sustainabilityEducationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sustainability Education"
        android:layout_marginBottom="16dp" />

    <!-- Button for Sign Out -->
    <Button
        android:id="@+id/signOutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out" />
</LinearLayout>
