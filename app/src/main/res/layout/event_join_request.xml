<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".EventDetailed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Join Event"
            android:textSize="24sp"
            android:textColor="@color/lavender"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <!-- Event Name -->
        <TextView
            android:id="@+id/joinEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black" />

        <!-- Event Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/joinEventImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- Event Date -->
        <TextView
            android:id="@+id/joinEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <!-- Event Location -->
        <TextView
            android:id="@+id/joinEventLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/joinEventDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details: "
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black" />

        <!-- Optional Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Message (optional):"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/optionalMessage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Add a message (e.g., questions, special needs, or confirmation)..."
            android:gravity="top"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp" />

        <!-- Confirm Button -->
        <Button
            android:id="@+id/confirmJoinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes, Join Now"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelJoinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
