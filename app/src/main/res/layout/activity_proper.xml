<!-- res/layout/activity_proper.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/light_green"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/rounded_background"
        android:elevation="8dp"
        android:clipToPadding="false">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="start"
            android:padding="12dp"
            android:text="Back to Dashboard"
            android:textColor="#3C3C3C"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_back"
            android:drawablePadding="8dp"
            android:elevation="5dp"
            app:cornerRadius="12dp"
            android:backgroundTint="#E6F3E6"/>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proper Waste Disposal and Sorting"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:backgroundTint="#6200EE"
            android:padding="16dp"
            android:elevation="5dp"
            app:cornerRadius="12dp" />

        <!-- Waste Disposal Guide Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#F1F1F1"
            app:cornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/wasteDisposalIcon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_waste_disposal"
                    android:contentDescription="Waste Disposal Icon" />

                <TextView
                    android:id="@+id/wasteDisposalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waste Disposal Guide"
                    android:textSize="24sp"
                    android:textColor="#3C3C3C"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="16dp" />

                <TextView
                    android:id="@+id/wasteDisposalDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingTop="12dp"
                    android:lineSpacingExtra="6dp"
                    android:text="Proper waste disposal is vital for maintaining a healthy and sustainable environment. It helps reduce pollution, conserve resources, and promote public health. The guide below explains how to responsibly dispose of various types of waste:\n\nRecyclables: Items like paper, plastic, glass, and metals should be sorted and sent to recycling facilities. Always clean them before recycling to avoid contamination.\n\nCompostables: Organic waste such as food scraps, coffee grounds, and garden waste can be composted to create nutrient-rich soil.\n\nHazardous Waste: Batteries, electronic devices, chemicals, and paints must be handled with care and disposed of at certified hazardous waste facilities." />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Waste Sorting Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#F1F1F1"
            app:cornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/wasteSortingIcon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_waste_sorting"
                    android:contentDescription="Waste Sorting Icon" />

                <TextView
                    android:id="@+id/wasteSortingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waste Sorting Tutorial"
                    android:textSize="24sp"
                    android:textColor="#3C3C3C"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="16dp" />

                <TextView
                    android:id="@+id/wasteSortingDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingTop="12dp"
                    android:lineSpacingExtra="6dp"
                    android:text="Correctly sorting waste ensures recyclables and compostables are processed effectively. Key steps include:\n\nRecyclables: Separate plastics, paper, and glass. Check for recycling codes to know if specific items are recyclable.\n\nCompostables: Use a separate bin for food scraps and other biodegradable items. Avoid mixing compostables with non-degradable waste.\n\nInteractive Guides: The app offers video tutorials to help you sort waste correctly, including advanced techniques for handling e-waste and mixed materials." />

                <Button
                    android:id="@+id/tutorialButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="12dp"
                    android:backgroundTint="#115219"
                    android:text="View Tutorials"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    android:elevation="5dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Local Disposal Centers Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#F1F1F1"
            app:cornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/localDisposalIcon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_local_disposal"
                    android:contentDescription="Local Disposal Icon" />

                <TextView
                    android:id="@+id/localDisposalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Local Disposal Centers"
                    android:textSize="24sp"
                    android:textColor="#3C3C3C"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="16dp" />

                <TextView
                    android:id="@+id/localDisposalDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingTop="12dp"
                    android:lineSpacingExtra="6dp"
                    android:text="Finding nearby waste management centers is essential for responsible disposal. Our app helps you locate the nearest certified facilities for various types of waste:\n\nRecycling Centers: Drop off items like plastics, paper, and e-waste at centers equipped for proper recycling.\n\nComposting Stations: Many communities have facilities that accept food and yard waste for composting.\n\nHazardous Waste Facilities: Locate drop-off points for electronics, batteries, and other toxic materials. Check for scheduled collection events in your area." />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
