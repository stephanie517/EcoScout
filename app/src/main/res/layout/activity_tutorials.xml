<!-- res/layout/activity_tutorials.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".TutorialsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interactive Waste Sorting Tutorials"
            android:textSize="24sp"
            android:textColor="#1A73E8"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="20dp" />

        <!-- Tutorial 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F9F9F9"
            app:cornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tutorial_recyclables" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How to Sort Recyclables"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:paddingTop="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Learn the proper methods to sort plastics, glass, paper, and metals for recycling. This tutorial includes tips on cleaning recyclables to avoid contamination."
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingTop="8dp" />

                <Button
                    android:id="@+id/playRecyclablesVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:backgroundTint="#1A73E8"
                    android:text="Watch Video"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tutorial 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F9F9F9"
            app:cornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tutorial_compostables" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Composting Basics"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:paddingTop="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This tutorial explains how to compost organic waste effectively. Learn what items can be composted and how to create nutrient-rich soil from kitchen scraps."
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingTop="8dp" />

                <Button
                    android:id="@+id/playCompostingVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:backgroundTint="#1A73E8"
                    android:text="Watch Video"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tutorial 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F9F9F9"
            app:cornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tutorial_e_waste" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-Waste Management"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:paddingTop="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Electronic waste requires special handling. This tutorial shows you how to dispose of devices like batteries, computers, and phones responsibly."
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingTop="8dp" />

                <Button
                    android:id="@+id/playEWasteVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:backgroundTint="#1A73E8"
                    android:text="Watch Video"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
